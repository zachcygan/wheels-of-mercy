// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model MailingList {
    id            Int     @id @default(autoincrement())
    name          String
    email         String  @unique
    recieveEmails Boolean @default(true)
}

model Vontuner {
    id    Int    @id @default(autoincrement())
    name  String
    email String @unique
    phone String
}

model Donations {
    id      Int    @id @default(autoincrement())
    donorId Int    @map("donor_id") // This is the foreign key
    donor   Donors @relation(fields: [donorId], references: [id]) // This sets up the relationship
    amount  Int
    // ... other fields for the donation, like amount, date, etc.
}

model Donors {
    id             Int         @id @default(autoincrement())
    firstName      String
    lastName       String
    email          String      @unique
    phone          String
    donations      Donations[]
    totalDonations Int
}

model WheelschairDealer {
    id    Int    @id @default(autoincrement())
    name  String
    email String @unique
    phone String
}

model Sponsors {
    id      Int    @id @default(autoincrement())
    name    String
    email   String @unique
    phone   String
    address String
}

model AffiliateAgency {
    id      Int    @id @default(autoincrement())
    name    String
    email   String @unique
    phone   String
    address String
}
